general {
        colors = true
        interval = 5
        color_good = "#98971a"
        color_bad = "#b16286"
        color_degraded = "#cc241d"
}

# order += "ipv6"
order += "cpu_usage"
order += "memory"
order += "disk /"
# order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
# order += "load"
order += "battery all"
order += "tztime local"

cpu_usage {
        format = " cpu  %usage "
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " â› %avail "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        #format_down = " no lan "
        format_down = ""
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = "ï‡¦"
        status_chr = "âš¡"
        # status_bat = "bat"
        # status_bat = "â˜‰"
        status_bat = "ïˆ“"
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        status_full = "â˜»"
        low_threshold = 15
        threshold_type = time
}

memory {
        format = "%used | %available"
        #format = "ğŸ %percentage_used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %m/%d %H:%M "
}
