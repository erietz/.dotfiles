let mapleader=" "

set ignorecase
set smartcase
set incsearch
set hlsearch
set cursorline
set autoindent
set backspace=indent,eol,start " <-- Needed if you want the backspace key to work like you would expect!
set tabstop=4
set shiftwidth=4


